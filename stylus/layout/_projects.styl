.projects
  padding-top: 20px

.project-preview
  height: 250px
  margin-bottom: 20px
  width: 100%
  float: left
  display: block

.project-preview__title
  display: block
  text-align: center
  @extend .ir
  background-repeat: no-repeat
  margin: 80px auto 15px auto
  height: 58px

.project-preview__tags
  text-align: center
  font-weight: 700
  text-transform: uppercase
  font-family: $type-soft
  span
    margin: 0px 7px

@media screen and (min-width: 600px)
  .projects
    padding-top: 100px

@media screen and (min-width: 600px) and (max-width: 880px)
  .project-preview
    width: cp(300, 620)
    margin-right: cp(20, 620)
    &:nth-of-type(2n)
      margin-right: 0%

@media screen and (min-width: 880px)
  .project-preview
    width: cp(300, 940)
    margin-right: cp(20, 940)
    &:nth-of-type(3n)
      margin-right: 0%


